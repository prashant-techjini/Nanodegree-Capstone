<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_news_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nanodegree.topnews.newssource.NewsSourceActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_news_source" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/fragment_news_source"
                android:name="com.nanodegree.topnews.newssource.NewsSourceFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</layout>
