<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_news_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nanodegree.topnews.newslist.NewsListActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_news_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/fragment_news_list"
                android:name="com.nanodegree.topnews.newslist.NewsListFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/fl_container_news_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>
</layout>